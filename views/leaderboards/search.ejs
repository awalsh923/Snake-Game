<head>
  <style>
    body {
      height: 100vh;
      width: 100vw;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      background-color: #414040;
    }

    .top-10 {
      display: block;
      position: fixed;
      top: 5%;
      left: 37.5%;
      width: 40%;
      text-align: center;
      color: rgb(2, 212, 2);
      font-size: 3em;
      font-family: 'Press Start 2P', cursive;
      font-weight: 400;
    }

    .leaderboard-display {
      display: block;
      position: fixed;
      width: 40%;
      left: 37.5%;
      top: 15%;
    }

    .leaderboard-row {
      display: block;
      position: relative;
      top: 5%;
      left: 25%;
      width: 50%;
      text-align: center;
      color: rgb(2, 212, 2);
      font-size: 1.2em;
      font-family: 'Press Start 2P', cursive;
      font-weight: 250;
    }

    .search-form {
      position: fixed;
      top: 60%;
      right: 32.5%;
      text-decoration: none;
      color: rgb(2, 212, 2);
      font-size: 1.2em;
      font-family: 'Press Start 2P', cursive;
      font-weight: 400;
    }

    .form-item {
      display: grid;
      grid-template-columns: max-content 1fr;
      align-content: center;
      grid-gap: 5px;
      text-align: center;
    }

    .name {
      background-color: black;
      border-radius: 4px;
      border-color: rgb(2, 212, 2);
      font-family: 'Press Start 2P', cursive;
      color: rgb(2, 212, 2);
    }

    .form-bottom {
      margin-top: 2.75%;
      display: inline-block;
      width: 100%;
      text-align: center;
    }

    .search-name {
      position: relative;
      text-decoration: none;
      background-color: rgb(2, 212, 2);
      color: black;
      font-size: 1.2em;
      font-family: 'Press Start 2P', cursive;
      font-weight: 400;
      border: 1px solid rgb(2, 212, 2);
      border-radius: 8px;
    }

    .search-name:hover {
      background-color: black;
      color: rgb(2, 212, 2);
    }

    .back-leaderboards {
      position: relative;
      text-decoration: none;
      background-color: rgb(2, 212, 2);
      color: black;
      font-size: 1.2em;
      font-family: 'Press Start 2P', cursive;
      font-weight: 400;
      border: 1px solid rgb(2, 212, 2);
      border-radius: 8px;
    }

    .back-leaderboards:hover {
      background-color: black;
      color: rgb(2, 212, 2);
    }

  </style>
</head>

<div class="top-10">Top 10 Players</div>
<div class="leaderboard-display">
  <% leaderboards.forEach(leaderboard=> { %>
    <p class="leaderboard-row">
      <%= leaderboard.name %>
        <%= leaderboard.score %>
    </p>
    <% }) %>
</div>

<div class="search-form">
  <form action="/leaderboards/:id" method="GET">
    <div class="form-item">
      <label>Name:</label>
      <input class="name" type="text" name="name">
    </div>
    <div class="form-bottom">
      <button class="search-name" type="submit">Search</button>
      <a href="/leaderboards" class="back-leaderboards">Back</a>
    </div>
  </form>
</div>