<head>
  <style>
    body {
      height: 100vh;
      width: 100vw;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      background-color: rgb(255, 255, 255);
    }

    #game-board {
      background-color: #CCC;
      width: 100vmin;
      height: 100vmin;
      display: grid;
      grid-template-rows: repeat(28, 1fr);
      grid-template-columns: repeat(28, 1fr);
    }

    .snake {
      background-color: hsl(200, 100%, 50%);
      border: .25vmin solid black;
    }

    .food {
      background-color: hsl(50, 100%, 50%);
      border: .25vmin solid black;
    }
  </style>
  <script src="./snake/game.js" defer type="module"></script>
</head>

<body>
  <div id="game-cover">this text goes over the gameboard</div>
  <div id="game-board"></div>
  <div hidden id="post-game">
  <form action="/" method="POST">
    <div class="form-row">
      <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" minlength="1" maxlength="10" required>
        <input  id="final-score" type="hidden" name="score">
      </div>
    </div>
    <div class="form-row form-row-end btn-row">
      <button class="btn btn-primary" type="submit">Create</button>
      <a href="/">Cancel</a>
    </div>
  </form>
  </div>
  <div id="displayed-score">Score: 0</div>
</body>